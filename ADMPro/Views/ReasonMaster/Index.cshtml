@{
    ViewBag.Title = "Reason Master";
}
@section styles{
    <style>
        .error {
            color: #dc3545 !important;
        }
    </style>
}
<div class="modal fade" id="Default">
    <div class="modal-dialog">
        <form role="form" id="ApplicationForm" method="post" class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add New Reason</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="ReasonIDP" name="ReasonIDP" value="0" />
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="ReasonName" class="control-label">Reason Name<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="ReasonName" name="ReasonName">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" onclick="Save()" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6 text-left" style="margin-top:8px">
                <h3 class="card-title text-bold">@ViewBag.Title</h3>
            </div>
            <div class="col-md-6 text-right">
                <button class="btn btn-info" onclick="AddNew()"><i class="fa fa-plus nav-icon"></i>&nbsp;Add New</button>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Reason Name</th>
                    <th>Status</th>
                    <th>Operation</th>
                </tr>
            </thead>
            <tbody id="data">
                <tr>
                    <td colspan="4" align="center"><div class="loader"></div></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
@section scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            GetAll();
        });

        function AddNew() {
            ClearControls();

            $("#Default").modal('show');
        }

        function Save() {
            $("#ApplicationForm").validate({
                rules: {
                    ReasonName: "required",
                },
                messages: {
                    ReasonName: "Reason name require.",
                },
                submitHandler: function (form) {
                    $.ajax({
                        type: "POST",
                        url: "/ReasonMaster/Save",
                        data: $("#ApplicationForm").serialize(),
                        success: function (mRes) {
                            toastr.success(mRes);

                            ClearControls();

                            $("#Default").modal('hide');

                            GetAll();
                        },
                        error: function (err) {
                            Swal.fire('Error', err, 'error');
                        }
                    });
                    return false;
                }
            });
        }

        function Get(id) {
            $("#Default").modal('show');

            var mData = { id: id }

            $.ajax({
                type: "POST",
                url: "/ReasonMaster/Get_GetAll",
                data: JSON.stringify(mData),
                contentType: "application/json",
                dataType: "json",
                success: function (mRes) {
                    var obj = JSON.parse(mRes);
                    $("#ReasonIDP").val(obj[0].ReasonIDP);
                    $("#ReasonName").val(obj[0].ReasonName);
                }
            });
        }

        function GeneralAction(id, ActionType) {
            ClearControls();

            Swal.fire({
                title: 'Are you sure?',
                text: (ActionType == 2 ? "You won't change status of this record!" : "You won't be able to revert this!"),
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: (ActionType == 2 ? "Yes, change it!" : "Yes, delete it!")
            }).then((result) => {
                if (result.value) {
                    var mData = { id: id, ActionType: ActionType }

                    $.ajax({
                        type: "POST",
                        url: "/ReasonMaster/GeneralAction",
                        data: JSON.stringify(mData),
                        contentType: "application/json",
                        dataType: "json",
                        success: function (mRes) {
                            toastr.success(mRes);

                            GetAll();
                        }
                    });
                }
            })
        }

        function GetAll() {
            var mData = { id: 0 }

            $.ajax({
                type: "POST",
                url: "/ReasonMaster/Get_GetAll",
                data: JSON.stringify(mData),
                contentType: "application/json",
                dataType: "json",
                success: function (mRes) {
                    var obj = JSON.parse(mRes);
                    var iHTML = "";

                    if (obj.length === 0) {
                        $("#data").html("<tr><td colspan='4' align='center'>No Data</td></tr>");
                    }
                    else {
                        for (var i = 0; i < obj.length; i++) {
                            iHTML += "<tr>";
                            iHTML += "<td>" + obj[i].SrNo + "</td>";
                            iHTML += "<td>" + obj[i].ReasonName + "</td>";
                            iHTML += '<td><button class="btn btn-' + (obj[i].IsActive == true ? "success" : "danger") + '" onclick="GeneralAction(' + obj[i].ReasonIDP + ',2)"><i class="fa fa-' + (obj[i].IsActive == true ? "check" : "times") + ' nav-icon"></i>&nbsp;' + (obj[i].IsActive == true ? "Yes" : "No") + '</button></td>';
                            iHTML += "<td>";
                            iHTML += '<button class="btn btn-success" onclick="Get(' + obj[i].ReasonIDP + ')"><i class="far fa-edit nav-icon"></i>&nbsp;Edit</button>';
                            iHTML += '&nbsp;<button class="btn btn-danger" onclick="GeneralAction(' + obj[i].ReasonIDP + ',1)"><i class="fa fa-trash nav-icon"></i>&nbsp;Delete</button>';
                            iHTML += "</td>";
                            iHTML += "</tr>";
                        }

                        $("#data").html(iHTML);
                    }
                }
            });
        }

        function ClearControls() {
            $("#ReasonIDP").val(0);
            $("#ReasonName").val('');
        }
    </script>
}