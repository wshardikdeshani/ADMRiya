@{
    ViewBag.Title = "ADM Header";
}
<div class="modal fade" id="Default">
    <div class="modal-dialog modal-lg">
        <form role="form" id="ApplicationForm" method="post" class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add New Ticket</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="ADMIDP" name="ADMIDP" value="0" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="OfficeID" class="control-label">ICUS Number</label>
                            <input type="text" class="form-control" id="OfficeID" name="OfficeID">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="OfficeID" class="control-label">ADM Number</label>
                            <input type="text" class="form-control" id="OfficeID" name="OfficeID">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="OfficeID" class="control-label">Ticket ID</label>
                            <input type="text" class="form-control" id="OfficeID" name="OfficeID">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="OfficeID" class="control-label">Office ID</label>
                            <input type="text" class="form-control" id="OfficeID" name="OfficeID">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="OfficeID" class="control-label">Office Branch</label>
                            <input type="text" class="form-control" id="OfficeID" name="OfficeID">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="OfficeID" class="control-label">Ticket Issued Branch</label>
                            <input type="text" class="form-control" id="OfficeID" name="OfficeID">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="OfficeID" class="control-label">Ticket Amount</label>
                            <input type="text" class="form-control" id="OfficeID" name="OfficeID">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="BranchIDF" class="control-label">Reason</label>
                            <select class="form-control" id="BranchIDF" name="BranchIDF">
                                <option value="0" selected>Select Branch</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="BranchIDF" class="control-label">Status</label>
                            <select class="form-control" id="BranchIDF" name="BranchIDF">
                                <option value="0" selected>Select Branch</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="BranchIDF" class="control-label">Remarks</label>
                            <textarea class="form-control"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" onclick="Save()" class="btn btn-primary">Save changes</button>
            </div>
        </form>
    </div>
</div>
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6 text-left" style="margin-top:8px">
                <h3 class="card-title text-bold">@ViewBag.Title</h3>
            </div>
            <div class="col-md-6 text-right">
                <button class="btn btn-info" onclick="AddNew()"><i class="fa fa-plus nav-icon"></i>&nbsp;Add New</button>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Office ID</th>
                    <th>Branch</th>
                    <th>IATA Number</th>
                    <th>Status</th>
                    <th>Operation</th>
                </tr>
            </thead>
            <tbody id="data">
                <tr>
                    <td colspan="6" align="center"><div class="loader"></div></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
@section scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            AddNew();

            jQuery.validator.addMethod("notEqualTo", function (v, e, p) {
                return this.optional(e) || v != p;
            }, "Please specify a different value");

            GetAllBranch();

            GetAll();
        });

        function AddNew() {
            ClearControls();

            $("#Default").modal('show');
        }

        function Save() {
            $("#ApplicationForm").validate({
                rules: {
                    OfficeID: "required",
                    BranchIDF: {
                        required: true,
                        notEqualTo: "0"
                    },
                    IATANumber: "required"
                },
                messages: {
                    OfficeID: "Office ID require.",
                    BranchIDF: {
                        required: "Branch require.",
                        notEqualTo: "Branch require."
                    },
                    IATANumber: "IATA number require"
                },
                submitHandler: function (form) {
                    $.ajax({
                        type: "POST",
                        url: "/OfficeMaster/Save",
                        data: $("#ApplicationForm").serialize(),
                        success: function (mRes) {
                            toastr.success(mRes);

                            ClearControls();

                            $("#Default").modal('hide');

                            GetAll();
                        },
                        error: function (err) {
                            Swal.fire('Error', err, 'error');
                        }
                    });
                    return false;
                }
            });
        }

        function Get(id) {
            $("#Default").modal('show');

            var mData = { id: id }

            $.ajax({
                type: "POST",
                url: "/OfficeMaster/Get_GetAll",
                data: JSON.stringify(mData),
                contentType: "application/json",
                dataType: "json",
                success: function (mRes) {
                    var obj = JSON.parse(mRes);
                    $("#ADMIDP").val(obj[0].ADMIDP);
                    $("#OfficeID").val(obj[0].OfficeID);
                    $("#BranchIDF").val(obj[0].BranchIDF);
                    $("#IATANumber").val(obj[0].IATANumber);
                }
            });
        }

        function GeneralAction(id, ActionType) {
            ClearControls();

            Swal.fire({
                title: 'Are you sure?',
                text: (ActionType == 2 ? "You won't change status of this record!" : "You won't be able to revert this!"),
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: (ActionType == 2 ? "Yes, change it!" : "Yes, delete it!")
            }).then((result) => {
                if (result.value) {
                    var mData = { id: id, ActionType: ActionType }

                    $.ajax({
                        type: "POST",
                        url: "/OfficeMaster/GeneralAction",
                        data: JSON.stringify(mData),
                        contentType: "application/json",
                        dataType: "json",
                        success: function (mRes) {
                            toastr.success(mRes);

                            GetAll();
                        }
                    });
                }
            })
        }

        function GetAll() {
            var mData = { id: 0 }

            $.ajax({
                type: "POST",
                url: "/OfficeMaster/Get_GetAll",
                data: JSON.stringify(mData),
                contentType: "application/json",
                dataType: "json",
                success: function (mRes) {
                    var obj = JSON.parse(mRes);
                    var iHTML = "";

                    if (obj.length === 0) {
                        $("#data").html("<tr><td colspan='6' align='center'>No Data</td></tr>");
                    }
                    else {
                        for (var i = 0; i < obj.length; i++) {
                            iHTML += "<tr>";
                            iHTML += "<td>" + obj[i].SrNo + "</td>";
                            iHTML += "<td>" + obj[i].OfficeID + "</td>";
                            iHTML += "<td>" + obj[i].BranchName + "</td>";
                            iHTML += "<td>" + obj[i].IATANumber + "</td>";
                            iHTML += '<td><button class="btn btn-' + (obj[i].IsActive == true ? "success" : "danger") + '" onclick="GeneralAction(' + obj[i].ADMIDP + ',2)"><i class="fa fa-' + (obj[i].IsActive == true ? "check" : "times") + ' nav-icon"></i>&nbsp;' + (obj[i].IsActive == true ? "Yes" : "No") +'</button></td>';
                            iHTML += "<td>";
                            iHTML += '<button class="btn btn-success" onclick="Get(' + obj[i].ADMIDP + ')"><i class="far fa-edit nav-icon"></i>&nbsp;Edit</button>';
                            iHTML += '&nbsp;<button class="btn btn-danger" onclick="GeneralAction(' + obj[i].ADMIDP + ',1)"><i class="fa fa-trash nav-icon"></i>&nbsp;Delete</button>';
                            iHTML += "</td>";
                            iHTML += "</tr>";
                        }

                        $("#data").html(iHTML);
                    }
                }
            });
        }

        function ClearControls() {
            $("#ADMIDP").val(0);
            $("#OfficeID").val('');
            $("#BranchIDF").val('0');
            $("#IATANumber").val('');
        }

        function GetAllBranch() {
            $.ajax({
                type: "POST",
                url: "/OfficeMaster/GetAllBranch",
                data: "",
                contentType: "application/json",
                dataType: "json",
                success: function (mRes) {
                    var obj = JSON.parse(mRes);
                    for (var i = 0; i < obj.length; i++) {
                        $("#BranchIDF").append("<option value=" + obj[i].BranchIDP + ">" + obj[i].BranchName + "</option>");
                    }
                }
            });
        }
    </script>
}